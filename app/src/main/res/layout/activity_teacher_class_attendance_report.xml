<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/relativeLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".TeacherClassAttendanceReport">


<ImageView
    android:id="@+id/imageView4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/img_bg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/Header"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_nav"/>


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_teacher"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_profile"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Anna Mary "
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Teacher (Class Cordinator)"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Division"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/Header"
            android:layout_centerInParent="true">



            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:layout_marginTop="95dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp">



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/Laytheader"
                                android:layout_margin="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textSize="18dp"
                                    android:text="Class Attendance Report"
                                    android:layout_gravity="center"
                                    />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:text="Class / Course"
                                        android:layout_alignParentLeft="true"
                                        />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:text="Division / Year"
                                        android:layout_alignParentRight="true"
                                        />


                                </RelativeLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal">

                                   <com.example.hi.school.utils.VerticalTextView
                                       android:layout_width="0dp"
                                       android:layout_weight="1"
                                       android:textSize="12sp"
                                       android:layout_height="wrap_content"
                                       android:textStyle="bold"
                                       android:padding="5dp"
                                       android:text="SI.NO"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/greyline"
                                        android:layout_height="100dp"/>

                                    <com.example.hi.school.utils.VerticalTextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:padding="5dp"
                                        android:text="Registration NO"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/greyline"
                                        android:layout_height="100dp"/>


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:padding="5dp"
                                        android:textSize="12sp"
                                        android:gravity="center"
                                        android:text="Name of the student"/>


                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/greyline"
                                        android:layout_height="100dp"/>


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="12sp"
                                        android:padding="5dp"
                                        android:gravity="center"
                                        android:text="Subject / Meridium (am/pm)"/>


                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/greyline"
                                        android:layout_height="100dp"/>


                                    <com.example.hi.school.utils.VerticalTextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:padding="5dp"
                                        android:textSize="12sp"
                                        android:gravity="center"
                                        android:text="Total present hours / days"/>


                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/greyline"
                                        android:layout_height="100dp"/>


                                    <com.example.hi.school.utils.VerticalTextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:padding="5dp"
                                        android:gravity="center"
                                        android:textSize="12sp"
                                        android:text="Total absent hours / days"/>


                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/greyline"
                                        android:layout_height="100dp"/>

                                    <com.example.hi.school.utils.VerticalTextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:padding="5dp"
                                        android:textSize="12sp"
                                        android:text="Percentage"/>

                                    <View
                                        android:layout_width="1dp"
                                        android:background="@color/greyline"
                                        android:layout_height="100dp"/>

                                    <com.example.hi.school.utils.VerticalTextView
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:padding="5dp"
                                        android:textSize="12sp"
                                        android:text="Total Percentage"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/greyline"/>

                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/img_circle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>



        </RelativeLayout>


    </RelativeLayout>

</ScrollView>


</android.support.constraint.ConstraintLayout>