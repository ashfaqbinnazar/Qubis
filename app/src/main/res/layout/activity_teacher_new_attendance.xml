<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeacherNewAttendance">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/Header"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_nav"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_teacher"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFF"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_profile"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Anna Mary "
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Teacher (Class Cordinator)"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Division"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/Header"
                android:layout_centerInParent="true">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="95dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="class / course"
                                android:textAllCaps="true"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"
                                />


                            <EditText
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:gravity="center"
                                android:background="@drawable/bg_card"
                                android:layout_height="wrap_content" />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="division / year"
                                android:textAllCaps="true"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"
                                />


                            <EditText
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:gravity="center"
                                android:background="@drawable/bg_card"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="subject / meridiem"
                                android:textAllCaps="true"
                                android:layout_marginTop="20dp"
                                android:textStyle="bold"
                                />


                            <EditText
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:gravity="center"
                                android:background="@drawable/bg_card"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:textColor="@color/white"
                                android:padding="10dp"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:background="@drawable/bg_card_yellow_dark"
                                android:text="Continue!"
                                />

                        </LinearLayout>


                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/img_circle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Attendance"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>



            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>