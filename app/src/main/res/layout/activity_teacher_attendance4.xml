<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeacherAttendance3">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/Header"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_nav"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img_teacher"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFF"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_profile"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Anna Mary "
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Teacher (Class Cordinator)"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Division"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/Header"
                android:layout_centerInParent="true">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="95dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:orientation="vertical">




                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_card_flat"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp">

                                <TextView
                                    android:id="@+id/Laytheader"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ATTENDANCE DETAILS"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:textColor="@color/colorPrimary"
                                    android:padding="10dp"
                                    android:background="@drawable/bg_card_grey"
                                    android:layout_marginBottom="10dp"
                                    android:textAllCaps="true"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/Laytheader"
                                    android:layout_margin="10dp"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:textStyle="bold"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textSize="11dp"
                                            android:layout_height="wrap_content"
                                            android:text="Subject / Meridiem (am/pm)"/>


                                        <View
                                            android:layout_width="1dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:background="@color/greyline"
                                            android:layout_height="60dp"/>

                                        <TextView
                                            android:textStyle="bold"
                                            android:layout_width="0dp"
                                            android:gravity="center"
                                            android:textSize="11dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:text="Total Hours / Days"/>

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:background="@color/greyline"
                                            android:layout_height="60dp"/>
                                        <TextView
                                            android:textStyle="bold"
                                            android:textSize="11dp"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:layout_height="wrap_content"
                                            android:text="Total Present Hours / Days"/>

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:background="@color/greyline"
                                            android:layout_height="60dp"/>
                                        <TextView
                                            android:textStyle="bold"
                                            android:layout_width="0dp"
                                            android:textSize="11dp"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:layout_height="wrap_content"
                                            android:text="Total Absent Hours / Days"/>

                                        <View
                                            android:layout_width="1dp"
                                            android:layout_marginRight="5dp"
                                            android:layout_marginLeft="5dp"
                                            android:background="@color/greyline"
                                            android:layout_height="60dp"/>

                                        <TextView
                                            android:textStyle="bold"
                                            android:textSize="11dp"
                                            android:layout_width="0dp"
                                            android:gravity="center"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:text="Percentage"/>




                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/greyline"/>




                                </LinearLayout>


                            </RelativeLayout>

                        </LinearLayout>


                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/img_circle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>



            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>