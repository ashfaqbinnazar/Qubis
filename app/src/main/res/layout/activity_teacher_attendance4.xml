                            <CalendarView
                                android:layout_width="match_parent"
                                android:background="@drawable/bg_card"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_height="wrap_content">

                            </CalendarView>


                            <LinearLayout
